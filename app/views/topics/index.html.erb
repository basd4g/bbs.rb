<h1>Listing topics</h1>
 
<%= link_to 'New topic', new_topic_path %>
<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th></th>
  </tr>
 
  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.title %></td>
      <td><%= topic.description %></td>
      <td><%= link_to 'Show', topic_path(topic) %></td>
      <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    </tr>
  <% end %>
</table>
