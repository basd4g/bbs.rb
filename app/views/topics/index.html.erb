
<div class="main_box"> 
<h1>トピック一覧</h1>
 
<%= link_to 'New topic', new_topic_path %>
<table>
  <tr>
    <th>トピック名</th>
    <th>説明</th>
    <th>設定</th>
  </tr>
 
  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, topic_path(topic) %></td>
      <td><%= topic.description %></td>
      <td>
          <%= link_to '編集', edit_topic_path(topic) %>
          <%= link_to '削除', topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
</div>
